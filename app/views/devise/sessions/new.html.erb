<div class="background_sign_up">
<div class="container">
    <div class="form_signup">

  <h2>Joël est de retouw !!! </h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="text_style">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, label:' Le code secwet', required: false %>
      <%= f.input :remember_me, label:'Se rappeler du Joël', as: :boolean if devise_mapping.rememberable? %>
    </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "On va zouker", class:'submit_button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
  </div>
</div>
