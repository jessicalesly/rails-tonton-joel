<div class="banner-new">
  <div class="banner-content-new">
    <h1>Modifie ton rhum</h1>
    <%= simple_form_for [@rum] do |f| %>
      <br>
      <%= f.input :name, label: "Nom du cocktail", class:"form-group", placeholder: "Nom du cocktail" %>
      <br>
      <%= f.input :volume, label: "Volume", class:"form-group", placeholder: "2L, 3 bouteilles, etc." %>
      <br>
      <%= f.input :price, label: "Prix en euros", class:"form-group", placeholder: "5, 10, etc." %>
      <br>
      <%= f.input :description, label: "Description", class:"form-group", placeholder: "Coco, épices, etc." %>
      <br>
      <%= f.input :anecdote, label: "Annecdote", class:"form-group", placeholder: "Blablabla" %>
      <br>
<!--       <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <br> -->
      <%= f.input :availability, collection: [true,false], label: "Disponibilité", class:"form-group", placeholder: "Blablabla" %>
      <br>
      <%= f.submit "C'est pawti", class: "btn btn-primary" %>
    <% end %>
    <br>
    <%= link_to "Revenir à la page du rhum", rum_path(@rum), class:"link_style" %>
    <br>
    <%= link_to "Revenir à l'acceuil", rums_path, class: "link_style home_spe" %>
    <!-- <a href="" class="btn-yours">Discover</a> -->
  </div>
</div>
